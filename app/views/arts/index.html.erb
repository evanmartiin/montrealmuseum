<header><h1>Découvrez Montréal...</h1></header>

  <table class="table table-hover container">
    <tbody>
      <div class="card-columns m-5">
      <% @arts.each do |art| %>
        <div class="card">
          <img src="<%= art.photo %>" class="card-img-top img-fluid"/>
          <div class="card-body">
            <h4 class="card-title"><%= art.title %></h4>
            <p class="card-subtitle"><%= art.author %>, <%= art.year %></p>
            <p class="card-info"><%= art.description %></p>
            <p class="card-text btn float-left"><%= link_to art.district, art.district %></p>
            <p class="card-text btn float-right"><%= link_to art.category, art.category %></p>
          </div>
        </div>
        <% end %>
      </div>
    </tbody>
  </table>

  <footer>

  </footer>
