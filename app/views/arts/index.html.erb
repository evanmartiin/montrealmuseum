<nav>
  <div id="logoMTL"><img src="https://cdn.glitch.com/c7f5badd-d247-4704-915a-715fa4802159%2FTM_logo_Montreal_blanc%20web.png?v=1578566433721"/></div>
  <hr>
   <form action="/action_page.php">
    <div class="form-group">
      <input type="search" placeholder="Rechercher..." class="form-control" id="search">
    </div>
    <div class="form-group">
      <select id="district" name="district">
        <option selected>Choisir un quartier</option>
        <% @districts.each do |district| %>
          <option><%= district.district_name %></option>
        <% end %>
      </select>
    </div>
    <div class="checkbox">
      <% @categories.each do |category| %>
        <input id="category-<%= category.id %>" type="checkbox">
        <label for="category-<%= category.id %>" style="margin: auto 20px;"><%= category.category_name %></label>
      <% end %>
    </div>
    <div class="btnNav"><button class="btnSearch" type="submit">Rechercher</button></div>
  </form>
  <div class="btnAdd">
    <button class="btnSearch" onclick="window.location.href='/arts/new'">Ajouter art</button>
  </div>
</nav>
<div class="content">
  <header><h1>Découvrez Montréal...</h1></header>
  <table class="table table-hover container">
    <tbody>
      <div class="card-columns m-5">
      <% @arts.each do |art| %>
        <div class="card">
          <img src="<%= art.photo %>" class="card-img-top img-fluid"/>
          <div class="card-body">
            <button class="card-click" onclick="window.location.href='/arts/<%= art.id %>'"><h4 class="card-title"><%= art.title %></h4></button>
            <p class="card-subtitle"><%= art.author %>, <%= art.year %></p>
            <p class="card-info"><%= art.description %></p>
            <button class="card-click" onclick="window.location.href='/arts/<%= art.id %>/edit'"><p class="card-info card-modify">Modifier</p></button>
            </br>
            <button class="card-click" onclick="window.location.href='/districts/<%= art.district.id %>'"><p class="card-text btn float-left"><%= art.district %></p></button>
            <button class="card-click float-right" onclick="window.location.href='/categories/<%= art.category.id %>'"><p class="card-text btn float-right"><%= art.category %></p></button>
          </div>
        </div>
        <% end %>
      </div>
    </tbody>
  </table>

  <footer>
    Evan Martin, 2020.
    </br>
    <a target="_blank" href="https://www.instagram.com/evanmartiin/"><img id="instaLogo" src="http://www.llumac.cat/iconpics/f/25/250393/instagram-logo-png.png"></a>
    <a target="_blank" href="https://www.linkedin.com/in/evan-martin-925805194/"><img id="linkedinLogo" src="https://cdn.glitch.com/c7f5badd-d247-4704-915a-715fa4802159%2Flogo_linkedin.png?v=1578761028416"></a>
  </footer>
</div>

















